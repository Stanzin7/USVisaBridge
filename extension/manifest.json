{
  "manifest_version": 3,
  "name": "US Visa Slot Checker (Open Source Patch)",
  "version": "1.0.0",
  "description": "Open-source extension to check visa slot availability on usvisascheduling.com. Read-only, no automation - just transparency.",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "https://www.usvisascheduling.com/*",
    "https://usvisascheduling.com/*",
    "https://*.usvisascheduling.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.usvisascheduling.com/*",
        "https://usvisascheduling.com/*",
        "https://*.usvisascheduling.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle",
      "all_frames": false
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["injected.js"],
      "matches": [
        "https://www.usvisascheduling.com/*",
        "https://usvisascheduling.com/*",
        "https://*.usvisascheduling.com/*"
      ]
    }
  ]
}


